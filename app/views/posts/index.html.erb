<div class="post_all">
  <% @posts.each do |post| %>
    <div class="post_item">
      <div class="post_user">
        <p>投稿者：</p>
      </div>
      <div class="post_image">
        <%= image_tag attachment_url(post, :post_image, :fill, 300, 300, format: "jpg") %>
      </div>
      <div class="post_content">
        <p><%= post.content %></p>
      </div>
    </div>
  <% end %>
</div>